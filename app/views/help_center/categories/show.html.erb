<%= render layout: "help_center/content_with_categories", locals: {
  title: @category.title,
  categories: @category.categories_for_same_audience,
  active_category: @category
} do %>
  <div class="space-y-4">
    <% @category.articles.each do |article| %>
      <div class="flex items-center space-x-3">
        <%= link_to article,
                    class: "text-gray-900 hover:text-blue-600 hover:underline font-medium flex items-center gap-2 w-full" do %>
          <svg class="w-5 h-5 text-gray-400 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          <%= article.title %>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>
